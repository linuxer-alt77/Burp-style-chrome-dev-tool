{
  "name": "http-request-repeater",
  "version": "1.0.0",
  "description": "Chrome DevTools extension for capturing, modifying, and repeating HTTP requests",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/http-request-repeater.git"
  },
  "keywords": [
    "chrome-extension",
    "devtools",
    "http",
    "request",
    "repeater",
    "burp-suite",
    "api-testing"
  ],
  "scripts": {
    "lint": "eslint js/**/*.js",
    "format": "prettier --write \"**/*.{js,css,html,md}\"",
    "build": "node scripts/build.js",
    "zip": "node scripts/zip.js",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "archiver": "^6.0.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    },
    "globals": {
      "chrome": "readonly"
    }
  }
}
